{
    "manifest_version": 3,
    "name": "PausePlay",
    "description": "AI-based plugin for detecting gamer burnout.",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage",
      "notifications",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
}