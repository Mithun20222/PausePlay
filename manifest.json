{
  "manifest_version": 3,
  "name": "PausePlay - Gamer Burnout Detector",
  "version": "1.0",
  "description": "Detect gaming burnout using facial emotion and screen time",
  "permissions": ["activeTab", "scripting", "storage", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
